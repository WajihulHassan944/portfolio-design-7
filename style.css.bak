
 
@media (max-width:400px){  
	 
        h1 {
            text-align: center;
			letter-spacing:4px;
			font-size:25px;
			margin-top:50px;
			
        }
		 nav {
            display: flex;
            list-style: none;
            padding: 0;
        }
		h2{
			margin:0;
			margin-bottom:20px;
			margin-top:-10px;
			letter-spacing:4px;
			font-weight:400;
		}

        nav a {
            text-decoration: none;
            color: #333; /* You can set the color as needed */
            margin: 0 10px; /* Adjust the margin as needed */
			
				letter-spacing:2px;
			font-weight:400;
		
        }
		.about{
			width:100%;
			display:flex;
			justify-content:center;
			align-items:center;
			margin-top:70px;
			margin-bottom:100px;
			position:relative;
			
		}
		.about .imgportion{
			flex-basis:50%;
			text-align:right;
			padding-right:45px;
			padding-top:30px;
		}
		.about .textportion{
			flex-basis:50%;
			padding:20px;
			
			display: flex;
			flex-direction:column;
            justify-content: flex-start;
			
			padding-right:150px;
			
		}
		
		.textportion p{
			color:#333;
			font-family:'Poppins',sans-serif;
			font-size:15.5px;
			line-height:1.4;
			width:87%;
			
		}
		.icons a{
			text-decoration:none;
			margin-right:10px;
		}
		.icons{
			margin-top:20px;
			position:relative;
		}
		.icons a i{
			text-decoration:none;
			color:black;
			font-size:20px;
		}
		
		.logoimgmain{
				width:25px;
				position:absolute;
				left:9.5%;
				top:-4px;
		}
		
		
		
		
		
		.specs{
			display:flex;
			gap:30px;
		}
		.row1 {
			width:150px;
		}
		
		.row2 {
			width:250px;
		}
		.specs span{
			font-weight:700;
			margin-right:10px;
		}
		.tobold{
			font-weight:700;
			font-size:17px;
			background:linear-gradient(90deg, hsla(14 , 98% , 50% , .3) , hsla(14 , 98% , 50% , 0) );
		}
		.aboutHeading{
			position:absolute;
			top:-15%;
			left:21%;
		}
		.aboutHeading h1{
			font-size:23px;
			letter-spacing:1px;
			font-family:'Poppins',sans-serif;
			position:relative;
		}
		.aboutHeading h1::after{
			content:'';
			position:absolute;
			top:30px;
			left:0;
			width:70px;
			height:2px;
			background:black;
		}
		
		 #imagediv {
            position: relative;
			
			width:350px;
				box-shadow:0 0 10px  rgba(0,0,0,0.1);
				
        }

        #imagediv img {
            width: 100%;
            height: auto;
            display: none;
            position: absolute;
            top:-230px;
            left:90%;
        }
		  html {
            scroll-behavior: smooth;
        }
}